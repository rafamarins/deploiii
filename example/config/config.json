{
    "app": {
        "paths": {
            "dist": "/assets/",
            "distCSS": "css/",
            "distJS": "js/",
            "styles": "/src/less",
            "scripts": "/src/js/"
        },
        "input": {
            "filename": {
                "css": "main.less"
            },
            "compiler": {
                "styles": {
                    "sass": false,
                    "less": true,
                    "stylus": false
                },
                "scripts": {
                    "babel": true
                }
            }
        },
        "output": {
            "uglify": true,
            "filename": {
                "scripts": "bundle.js",
                "css": "bundle.css"
            }
        },
        "watch": {
            "styles": "css/*.css",
            "scripts": "js/*.js"
        }
    },
    "ftp": {
        "enabled": false,
        "host": "",
        "user": "",
        "password": "",
        "port": 0,
        "sftp": null,
        "base": ""
    }
}